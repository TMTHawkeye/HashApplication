<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_recent_tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:layout_weight="1.7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tag_name_in_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:text="#Insta"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp"
                    android:layout_toLeftOf="@+id/no_of_tags_id"/>

                <TextView
                    android:id="@+id/no_of_tags_id"
                    android:fontFamily="@font/gilroy_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_toLeftOf="@+id/icon_search_recent"
                    android:text="34 tags"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:id="@+id/icon_search_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_9sdp"
                    android:src="@drawable/search_svg"
                    app:tint="@color/dark_grey2" />
            </RelativeLayout>

            <View
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginHorizontal="@dimen/_10sdp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>